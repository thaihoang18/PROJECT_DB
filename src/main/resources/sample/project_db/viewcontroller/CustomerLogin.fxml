<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.project_db.controller.admin.CustomerLoginController"
      prefHeight="300.0" prefWidth="400.0" alignment="CENTER" spacing="10">
    <children>
        <Label text="Customer Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <VBox spacing="5">
            <Label text="Username:" />
            <TextField fx:id="usernameField" />
        </VBox>
        <VBox spacing="5">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" />
        </VBox>
        <Button text="Login" fx:id="loginButton" onAction="#handleLogin" />
    </children>
</VBox>