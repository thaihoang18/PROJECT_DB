<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="133.0" prefWidth="181.0" spacing="10" styleClass="gradient-bg" stylesheets="@../design/inventoryDesign.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.project_db.controller.admin.AdminLoginControllerTest">
    <Label text="Admin Login" textFill="WHITE">
      <font>
         <Font name="System Bold" size="16.0" />
      </font></Label>
    <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="134.0" promptText="Tên đăng nhập" styleClass="text-box" stylesheets="@../design/inventoryDesign.css" />
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="text-box" stylesheets="@../design/inventoryDesign.css" />
    <Button onAction="#handleLogin" styleClass="inventory-place-order" stylesheets="@../design/inventoryDesign.css" text="Đăng nhập" />
</VBox>
