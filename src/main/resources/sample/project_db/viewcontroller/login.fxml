<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.LoginController"
            prefWidth="300" prefHeight="200">

    <children>
        <Label layoutX="30" layoutY="30" text="Tên đăng nhập:" />
        <TextField fx:id="usernameField" layoutX="130" layoutY="25" prefWidth="140"/>

        <Label layoutX="30" layoutY="70" text="Mật khẩu:" />
        <PasswordField fx:id="passwordField" layoutX="130" layoutY="65" prefWidth="140"/>

        <Button text="Đăng nhập"
                layoutX="100" layoutY="120"
                prefWidth="100"
                onAction="#handleLogin"/>
    </children>
</AnchorPane>
