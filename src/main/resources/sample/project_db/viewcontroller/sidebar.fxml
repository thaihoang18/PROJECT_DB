<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="sidebar" spacing="10" alignment="TOP_LEFT"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.project_db.controller.SidebarController"
      style="-fx-background-color: #2c3e50; -fx-padding: 20;">
    
    <Label text="Bookstore App" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button fx:id="btnLogin" text="Login" onAction="#handleLogin" prefWidth="150"/>
    <Button fx:id="btnSignup" text="Signup" onAction="#handleSignup" prefWidth="150"/>
    <Button fx:id="btnProfile" text="Profile" onAction="#handleProfile" prefWidth="150"/>
    <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout" prefWidth="150"/>
    <Button fx:id="btnInventory" text="Inventory" onAction="#handleInventory" prefWidth="150"/>

</VBox>
